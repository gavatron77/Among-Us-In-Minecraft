
# Tp Player so They Scan Without Being Inside
execute as @a[tag=medbay_scan,scores={task_request=1..}] at @e[tag=medbay_scan_check] run tp @s ~ ~2 ~

# Encase Player
execute as @a[tag=medbay_scan,scores={task_request=1..}] at @e[tag=medbay_scan_check] run fill ~-1 ~2 ~-1 ~1 ~4 ~1 minecraft:barrier
execute as @a[tag=medbay_scan,scores={task_request=1..}] at @e[tag=medbay_scan_check] run fill ~ ~2 ~ ~ ~4 ~ minecraft:air
execute at @e[type=minecraft:armor_stand,tag=medbay_scan_check] run setblock ~ ~1 ~ minecraft:lime_stained_glass

# Set Timer
execute as @a[tag=medbay_scan,scores={task_request=1..}] run scoreboard players set @s MedScan_Timer 20

